{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    
    "strict": true,
    "noImplicitReturns": true,
    "useDefineForClassFields": true,
    
    "skipLibCheck": true,
    "noEmit": true,
  },
  "include": ["src/**/*"]
}